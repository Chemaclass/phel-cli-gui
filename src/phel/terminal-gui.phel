(ns phel-cli-gui\terminal-gui
  (:use \PhelCliGui\TerminalGui))

(def input-stream php/STDIN)
(def gui (php/new TerminalGui input-stream))

(defn clear-screen []
  (php/-> gui (clearScreen)))

(defn render-board [width height]
  (php/-> gui (renderBoard width height)))

(defn render [column row text]
  (php/-> gui (render column row text)))

