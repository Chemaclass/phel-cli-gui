{
    "name": "chemaclass/phel-cli-gui",
    "description": "Phel functions to render in the terminal. It uses the Cursor from the Symfony Command module.",
    "keywords": [
        "phel",
        "lisp",
        "functional",
        "language"
    ],
    "homepage": "https://phel-lang.org/",
    "license": "MIT",
    "authors": [
        {
            "name": "Jose M Valera Reales",
            "email": "chemaclass@outlook.es",
            "homepage": "https://chemaclass.com"
        }
    ],
    "require": {
        "php": ">=8.3",
        "ext-pcntl": "*",
        "ext-posix": "*",
        "ext-readline": "*",
        "phel-lang/phel-lang": "^0.22",
        "symfony/console": "^7.3"
    },
    "minimum-stability": "dev",
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "roave/security-advisories": "dev-latest",
        "symfony/var-dumper": "7.2"
    },
    "autoload": {
        "psr-4": {
            "PhelCliGui\\": "src/php/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhelCliGui\\Tests\\": "tests/php/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "platform": {
            "php": "8.3"
        }
    },
    "scripts": {
        "build": "vendor/bin/phel build --no-cache",
        "test": [
          "@test:phel",
          "@test:php"
        ],
        "test:phel": "vendor/bin/phel test",
        "test:php": "vendor/bin/phpunit tests",
        "format": "vendor/bin/phel format"
    }
}
