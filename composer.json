{
    "name": "chemaclass/phel-cli-gui",
    "description": "Phel functions to render in the terminal. It uses the Cursor from the Symfony Command module.",
    "keywords": [
        "phel",
        "lisp",
        "functional",
        "language"
    ],
    "homepage": "https://phel-lang.org/",
    "license": "MIT",
    "authors": [
        {
            "name": "Jose Maria Valera Reales",
            "email": "chemaclass@outlook.es",
            "homepage": "https://chemaclass.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-pcntl": "*",
        "ext-readline": "*",
        "phel-lang/phel-lang": ">=0.15",
        "symfony/console": "^7.1"
    },
    "minimum-stability": "dev",
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "symfony/var-dumper": "6.4"
    },
    "autoload": {
        "psr-4": {
            "PhelCliGui\\": "src/php/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "platform": {
            "php": "8.2"
        }
    },
    "scripts": {
        "build": "vendor/bin/phel build --no-cache",
        "test": "vendor/bin/phel test",
        "format": "vendor/bin/phel format"
    }
}
